root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_style = tab
indent_size = 4

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.sublime-*]
indent_style = tab
indent_size = 4

[*.tmPreferences]
indent_style = tab
indent_size = 4
